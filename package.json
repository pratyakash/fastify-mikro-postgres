{
  "name": "fastify-mikro-postgres",
  "version": "1.0.0",
  "description": "Fastify MikroORM Boilerplate",
  "repository": "https://github.com/pratyakash/fastify-mikro-postgres.git",
  "author": "<pratyakash13@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@mikro-orm/cli": "^6.2.8",
    "@mikro-orm/core": "^6.2.8",
    "@mikro-orm/migrations": "^6.2.8",
    "@mikro-orm/postgresql": "^6.2.8",
    "@mikro-orm/reflection": "^6.2.8",
    "dotenv": "^16.4.5",
    "fastify": "^4.27.0"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsnd --respawn --transpile-only --exit-child src/server.ts",
    "prepare": "husky",
    "type-check": "tsc --pretty --noEmit",
    "create-migration":"mikro-orm migration:create",
    "up-migration":"mikro-orm migration:up"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.4",
    "nodemon": "^3.1.0",
    "prettier": "^2.8.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
